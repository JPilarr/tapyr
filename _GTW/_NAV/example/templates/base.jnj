{% extends "html/base.jnj" %}
{%- import "html/form.jnj" as Form %}
{%- block navigate -%}
  <h1>H1 BN</h1>
  {{ super () }}
  <p>Current page [{{ page.abs_href }}]</p>
  {%- if request.user.authenticated %}
    <a href="/logout.html">{{ request.user.name }}, logout</a>
  {%- else %}
    {{ Form.login_inline (page, request, action = "/login.html") }}
  {% endif -%}
{%- endblock -%}
