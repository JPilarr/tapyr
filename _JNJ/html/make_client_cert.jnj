{%- import (html_version or "html/5.jnj") as X -%}
{%- import "html/form.jnj" as Form with context %}

{%- block document -%}
  {% call Form.form (class  = "Auth Client-Cert") -%}
    <ul>
      <li class="account-name">{{ account.name }}</li>
      {{- Form.display_errors (errors, None) -}}

      <li>
        <label for="F_challenge">
          {{- GTW._T ("Keysize") }}:
          <keygen id="F_challenge" name="SPKAC" challenge="{{ challenge }}">
          {#- -#}
        </label>
      </li>
      <li>
        <label for="F_desc">
          {{- GTW._T ("Description") }}:
          {{ X.input.text
              ( title = GTW._T ("Optional descritpion for client certificate")
              , id    = "F_desc"
              , name  = "desc"
              )
          -}}
        </label>
      </li>
      <li>
        {{ X.input.submit
            ( title =
                ( GTW._T ("Create certificate request for user %s")
                % (request.user.name, )
                )
            , value = GTW._T ("Create certificate request")
            )
        }}
      </li>
    </ul>
  {% endcall %} {# form #}
{%- endblock document -%}

{#- __END__ jinja template: make_client_cert.jnj -#}
