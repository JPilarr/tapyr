style_sheet = Style_Sheet \
    ( Rule
        ( ".Object-List"
        , min_width          = Percent (50)
        , children           =
            [ Rule
                ( "a"
                , display         = "inline-block"
                , text_decoration = "none"
                , children        =
                    [ Rule_Class
                        ( "delete"
                        , display = "none"
                        )
                    ]
                )
            , Rule
                ( "caption"
                , color           = "#1b4287"
                , font_size       = P.h1_font_size + 10
                , font_weight     = "bold"
                , padding         = TRBL0 (b = Em (3/4.))
                , text_align      = "left"
                )
            , Rule
                ( "thead"
                , font_weight     = "bold"
                )
            , Rule
                ( "td.delete"
                , display         = "none"
                )
            , Rule
                ( "td", "th"
                , font_size       = "small"
                , children        =
                    [ Rule_Class
                        ( "cmd-button"
                        , padding           = Em (0.2)
                        , children          =
                            [ Rule
                                ( "b"
                                , border_width      = Px (1)
                                , display           = "block"
                                )
                            ]
                        )
                    ]
                )
            , Rule
                ( "td+td", "th+th"
                , border_left   = "2px solid " + P.color_half_grey
                , padding_left  = Em (0.5)
                , padding_right = Em (0.5)
                )
            , Rule
                ( "th.Group[colspan]"
                , padding         = 0
                , children        =
                    [ Rule
                        ( "a"
                        , P.nav_col.color_spec_heading
                        , font_size = "medium"
                        , display   = "block"
                        , padding   = TRBL0 (t = Px (2), b = Px (4))
                        )
                    ]
                )
            , Rule
                ( "tr.active"
                , cursor          = "pointer"
                , children        =
                    [ P.Rule.hover
                    ]
                )
            , Rule
                ( ".Count"
                , padding         = TRBL0 (r = Em (0.1), l = Em (0.5))
                , text_align      = "right"
                )
            , Rule ### otherwise, Chrome has wrong dimensions
                ( ".ui-state-default"
                , height          = Px (16)
                , width           = Px (16)
                )
            ]
        )
    )

Include ("html/autocomplete.media")
Include ("html/cmd_button.media")
Include ("html/cmd_menu.media")
Include ("html/ui_dialog.media")

### __END__ html/e_type_admin.media
