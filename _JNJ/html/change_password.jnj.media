style_sheet = Style_Sheet \
    ( Rule
        ( "form.Password-Change"
        , children =
            [ Rule
                ( "ul"
                , list_style     = "none"
                , margin         = 0
                , padding        = TRBL0 (l = Em (1./8))
                , children       =
                    [ Rule
                        ( "label"
                        , P.nav_col.color_spec_label
                        , padding          = TRBL (Em (0.2), Em (0.5))
                        )
                    , Rule
                        ( ".account-name"
                        , font_size        = P.h1_font_size + 10
                        , font_weight      = "bold"
                        , line_height      = 2.0
                        , children       =
                            [ Rule_Pseudo
                                ( "before"
                                , content    = "Account"
                                )
                            ]
                        )
                    ]
                )
            ]
        )
    )

