{%- macro form
        ( action        = ""
        , method        = "post"
        , next_form_kw  = {}
        , reset_kw      = {}
        , submit_kw     = {}
        )
-%}
  <form action="{{ action }}" method="{{ method }}"{{ kwargs|xmlattr }}>
    {{ caller () }}
    {%- if next_form_kw %}
      {{ input.hidden (** next_form_kw) }}
    {% endif -%}
    {%- if reset_kw %}
      {{ input.reset  (** reset_kw) }}
    {% endif -%}
    {%- if submit_kw %}
      {{ input.submit (** submit_kw) }}
    {% endif -%}
  </form>
{%- endmacro -%} {#- form -#}

{%- macro login (un_tag = "Username", pw_tag = "Password", action = "/login/") -%}
  {% call form (action = action, ** kwargs) -%}
    <ul>
      <li><label for="F_username">{{ I18N._T (un_tag) }}</label></li>
      <li>
        {{ input.text
             ( id            = "F_username"
             , maxlength     = "30"
             , placeholder   = "Please enter your user-name"
             )
         }}
      </li>
      <li><label for="F_password">{{ I18N._T (pw_tag) }}</label></li>
      <li>
        {{ input.password
             ( id            = "F_password"
             , placeholder   = "Please enter your password"
             )
        }}
      </li>
      <li>
        {{ input.submit (value = I18N._T ('Login')) }}
        {{ input.hidden (name  = "next", value = next) }}
      </li>
    </ul>
  {% endcall %} {# form #}
{%- endmacro -%} {#- login -#}

